@model Sample.Repository.UserInfo
@{
    ViewBag.Title = "Register";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Create a new account.</h2>
</hgroup>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Registration Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name)
            </li>
            <li>
                @Html.LabelFor(m => m.EmailId)
                @Html.TextBoxFor(m => m.EmailId)
            </li>
             <li>
                @Html.LabelFor(m => m.PhoneNo)
                @Html.TextBoxFor(m => m.PhoneNo)
            </li>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
            </li>
             <li>
                @Html.LabelFor(m => m.Password)
                @Html.TextBoxFor(m => m.Password)
            </li>
        </ol>
        <input id="btnSave" type="submit" value="Register" /><h3>@ViewBag.Msg.</h3>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="../../Scripts/jquery-1.7.1.js" type="text/javascript"></script>
<script src="../../Scripts/CallAPI.js" type="text/javascript"></script>
<script type="text/javascript">
$(document).ready(function () {
    $('[id$=btnSave]').click(function () {
        alert(1);
        $.ajax({
            type: "POST",
            url: '@Url.Action("Register")',
            data: JSON.stringify(@Html.Raw(Json.Encode(Model))),
            datatype: 'json',
            contentType: "application/json; charset=utf-8",
            success: function (response) {
               alert('Success');
            }
             return false;
        });
       
    });

});
</script>